<Window x:Class="REvernus.Views.SimpleViews.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:REvernus.Core.ESI"
        mc:Ignorable="d"
        Title="VerificationWindow" Height="228" Width="430.5">
    <Grid>
        <Grid VerticalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button x:Name="LoginButton"
                        Content="CLICK ME"
                        Click="LoginButton_Click" Cursor="Hand" Margin="10" MaxWidth="300" />
                <Grid HorizontalAlignment="Center">
                    <Label Content="Enter the code displayed in your web browser after signing in." />
                </Grid>
                <TextBox x:Name="AuthCodeTextBox" MaxWidth="500" Background="LightGray" Margin="10"
                         TextAlignment="Center" />
                <Button x:Name="AcceptButton" Content="Accept" MaxWidth="200" Click="AcceptButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>